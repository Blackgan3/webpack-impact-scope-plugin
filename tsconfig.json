{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "declaration": false,
    "declarationMap": false,
    "sourceMap": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
